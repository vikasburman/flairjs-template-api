{
    "plugins": [
        { "name": "docker_image", "settings": { "cmd": "" } },
        { "name": "node_modules", "settings": { "cmd": "yarn install --prod" } },
        { "name": "web_modules" },
        { "name": "copy_files" },
        { "name": "minify_files" },
        { "name": "write_flags", "settings": { "defaultFlag": "dev" } }
    ],    
    "build": [
        { "profile": "server" }
    ],
    "profiles": {
        "server": {
            "dest": "/",
            "skipMinify": true,
            "build": [
                "app",
                "features"
            ],
            "plugins": ["copy_files", "node_modules", "write_flags"],
            "copy": [
                "private",
                "appConfig.json",
                "main.js"
            ],
            "flags": {
                "dev": {
                    "FLAIR_SYMBOLS": "DEV,DEBUG"
                },
                "prod": {
                    "FLAIR_SYMBOLS": "PROD"
                }
            }            
        }
    }
}