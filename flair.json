{
    "build": {
        "custom": true,
        "customConfig": {
            "build": [
                { "profile": "server" }
            ],
            "profiles": {
                "server": {
                    "dest": "/",
                    "skipMinify": true,
                    "build": [
                        "app",
                        "features"
                    ],
                    "plugins": ["copy_files", "node_modules", "write_flags"],
                    "copy": [
                        "private",
                        "appConfig.json",
                        "~/node_modules/flairjs-fabric/flair.server/main.js >> ./main.js"
                    ],
                    "flags": {
                        "dev": {
                            "FLAIR_SYMBOLS": "DEV,DEBUG"
                        },
                        "prod": {
                            "FLAIR_SYMBOLS": "PROD"
                        }
                    }            
                }
            }
        }   
    },
    
    "test": {
        "jasmine": true,
        "jasmineConfig": {
            "stopOnSpecFailure": true
        }
    }
}