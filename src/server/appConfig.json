{
    "flair.app": {
        "app": "myapp.main.App",

        "boot": {
            "preambles": [
                "./app",
                "./api"
            ]
        }
    },
    "worker:flair.app": {
        "boot": {
            "preambles": [
                "./app"
            ]            
        }
    },

    "flair.server.express": {
        "express": {
            "server-http": {
                "enable": true,
                "port": 8080
            },
            "server-https": {
                "enable": true,
                "port": 8443,
                "privateKey": "./private/key.pem",
                "publicCert": "./private/cert.pem"
            }
        },

        "routing": {
            "mounts": {
                "main": "/",
                "api_v1": "/api/v1/"
            },
            "all": {
                "before": {
                    "settings": [
                        { "name": "case sensitive routing", "value": false },
                        { "name": "strict routing", "value": false }
                    ]
                },
                "after": {
                    "middlewares": [
                        { "name": "flair.server.mw.ResHeaders", "args": [
                            { "name": "X-Api-Version", "value": "1" }
                        ]}
                    ]
                }
            },
            "api": {
                "middlewares": [
                    { "name": "cors", "args": [{ "origin": true }] },
                    { "name": "flair.server.mw.ResHeaders", "args": [
                        { "name": "Access-Control-Allow-Origin", "value": "*" } 
                    ]}                     
                ]
            }
        }
    }
}