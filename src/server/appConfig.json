{
    "global": {
        "flair": {
        }
    },

    
    "flair.app": {
        "app": "myapp.main.App",

        "boot": {
            "env": {
                "isExpress": true
            },            
            "preambles": [
                "./app",
                "./features"
            ],    
            "ports": {
            },       
            "bootwares": [
                "flair.boot.NodeEnv",
                "flair.boot.Middlewares",
                "flair.boot.ResHeaders",
                "flair.boot.DIContainer",
                "flair.boot.ServerRouter"
            ]
        },

        "di": {
            "container": {
            }
        }
    },
    "worker:flair.app": {
        "boot": {
            "preambles": [
                "./app",
                "./features"
            ],            
            "bootwares": [
                "flair.boot.DIContainer"
            ]
        }
    },

    "flair.server": {
        "envVars": {
            "vars": [
                "./private/.env"
            ]
        }
    },

    "flair.server.express": {
        "express": {
            "server-http": {
                "enable": true,
                "port": 8080,
                "timeout": -1
            },
            "server-https": {
                "enable": true,
                "port": 8443,
                "timeout": -1,
                "privateKey": "./private/key.pem",
                "publicCert": "./private/cert.pem"
            }
        },

        "routing": {
            "mounts": {
                "main": "/",
                "api_v1": "/api/v1/"
            },
            "all": {
                "before": {
                    "settings": [
                        { "name": "case sensitive routing", "value": false },
                        { "name": "strict routing", "value": false }
                    ],
                    "middlewares": [
                    ],  
                    "interceptors": [
                    ],
                    "resHeaders": [
                    ]                    
                },
                "after": {
                    "settings": [
                    ],
                    "middlewares": [
                    ],  
                    "interceptors": [
                    ],                    
                    "resHeaders": [
                        { "name": "X-Built-On", "value": "flairjs" }
                    ]
                }
            },
            "main": {
                "settings": [
                ],
                "middlewares": [
                ],  
                "interceptors": [
                ],
                "resHeaders": [
                ]                
            },
            "api_v1": {
                "settings": [
                ],                
                "middlewares": [
                    { "name": "cors", "args": [{ "origin": true }] }
                ], 
                "interceptors": [
                ],                 
                "resHeaders": [
                    { "name": "X-Api-Version", "value": "1" },
                    { "name": "Access-Control-Allow-Origin", "value": "*" }                
                ]                         
            }
        }
    }

}